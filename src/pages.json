{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^(?!z-paging-refresh|z-paging-load-more)z-paging(.*)": "z-paging/components/z-paging$1/z-paging$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/greet/greet",
      "style": {
        "navigationStyle": "custom",
        "app-plus": {
          "titleView": false
        }
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "",
        "app-plus": {
          "softinputMode": "adjustResize",
          "adjust-position": false
        }
      }
    },
    {
      "path": "pages/login/sendCode/sendCode",
      "style": {
        "navigationBarTitleText": ""
      }
    },
    {
      "path": "pages/home/home",
      "style": {
        "navigationStyle": "custom",
        "app-plus": {
          "titleView": false
        }
      }
    },
    {
      "path": "pages/wish/wish",
      "style": {
        "navigationStyle": "custom",
        "app-plus": {
          "titleView": false
        }
      }
    },
    {
      "path": "pages/inbox/inbox",
      "style": {
        "navigationStyle": "custom",
        "app-plus": {
          "titleView": false
        }
      }
    },
    {
      "path": "pages/mine/mine",
      "style": {
        "navigationStyle": "custom",
        "app-plus": {
          "titleView": false
        }
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#000",
    "selectedColor": "#d8001b",
    "iconfontSrc": "static/iconfont/iconfont.ttf",
    "backgroundColor": "#fff",
    "list": [
      {
        "pagePath": "pages/home/home",
        "text": "首页",
        "iconfont": {
          "text": "\ue600",
          "color": "#000",
          "selectedColor": "#d8001b"
        }
      },
      {
        "pagePath": "pages/wish/wish",
        "text": "心愿单",
        "iconfont": {
          "text": "\ue611",
          "color": "#000",
          "selectedColor": "#d8001b"
        }
      },
      {
        "pagePath": "pages/inbox/inbox",
        "text": "收件箱",
        "iconfont": {
          "text": "\ue64f",
          "color": "#000",
          "selectedColor": "#d8001b"
        }
      },
      {
        "pagePath": "pages/mine/mine",
        "text": "我的",
        "iconfont": {
          "text": "\ue8a0",
          "color": "#000",
          "selectedColor": "#d8001b"
        }
      }
    ]
  }
}
